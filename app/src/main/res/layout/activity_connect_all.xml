<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectAllActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/connectAll_back"
                android:text="返回"
                android:layout_width="80dp"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/connectAll_test"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="连接" />
            <TextView
                android:text="空码:"
                android:layout_marginLeft="100dp"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/connectAll_void_code"
                android:background="@color/disconnect_red"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/connectAll_name"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/connectAll_mac"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:text="  部位:"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <TextView
                android:text="p1_head"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="40dp" />
            <TextView
                android:text="p1_body"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="40dp" />
            <TextView
                android:text="p2_head"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="40dp" />
            <TextView
                android:text="p2_body"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:layout_width="match_parent">

            <TextView
                android:text="心跳测试"
                android:layout_width="60dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/connectAll_p1head_heart"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="30dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/connectAll_p1body_heart"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="60dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/connectAll_p2head_heart"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="60dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/connectAll_p2body_heart"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="60dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:layout_width="match_parent">

            <TextView
                android:text="受击测试"
                android:layout_width="60dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/connectAll_p1head_beat"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="30dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/connectAll_p1body_beat"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="60dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/connectAll_p2head_beat"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="60dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/connectAll_p2body_beat"
                android:background="@color/disconnect_red"
                android:layout_marginLeft="60dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:text="点击相应按钮发送对码"
                android:layout_width="300dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:id="@+id/connectAll_p1head_button"
                android:text="p1头部"
                android:layout_width="90dp"
                android:layout_height="100dp" />
            <Button
                android:id="@+id/connectAll_p1body_button"
                android:text="p1身体"
                android:layout_width="90dp"
                android:layout_height="100dp" />
            <Button
                android:id="@+id/connectAll_p2head_button"
                android:text="p2头部"
                android:layout_width="90dp"
                android:layout_height="100dp" />
            <Button
                android:id="@+id/connectAll_p2body_button"
                android:text="p2身体"
                android:layout_width="90dp"
                android:layout_height="100dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/connectAll_confirm"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="确认" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>